{
    "compilerOptions": {
        "module": "none",
        "lib": [
            "dom",
            "es2015"
        ],
        "moduleResolution": "node",
        "strictNullChecks": true,
        "sourceMap": true,
        "importHelpers": true,
        "target": "es6",
        "strict": true,
        "outDir": "./dist",
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}