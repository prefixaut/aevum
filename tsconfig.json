        "lib": [
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "declaration": true,
        "importHelpers": true,
        "target": "es5",
        "declarationDir": "./dist",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}