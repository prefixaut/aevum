{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "no-console": [
            true,
            "warn"
        ],
        "no-bitwise": [
            false
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "linebreak-style": [
            false
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "no-fallthrough": [
            "off"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "object-literal-sort-keys": [
            false
        ]
    }
}